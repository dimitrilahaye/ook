{
    "compilerOptions": {
      "preserveConstEnums": true,
      "emitDeclarationOnly": false,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "declaration": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["es2023"],
      "module": "node16",
      "target": "es2022",
      "moduleResolution": "node16",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./dist", "node_modules", "./src/tests"]
  }